<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="defaults">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">4.5</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>

    </style>

    <style name="TXTplayerName" parent="defaults">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>

    </style>

    <style name="TXTscoreDisplay" parent="defaults">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display3</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="TXTsetScoreDisplay" parent="defaults">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin_small</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="TXTheaderDisplay">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">@color/colorIcons</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin_small</item>
    </style>

    <style name="BTNaddPoints" parent="defaults">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="OtherButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:state_enabled">true</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="TXTstatus">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin_small</item>
    </style>

    <style name="ViewRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">@dimen/divider_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorDivider</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin_small</item>
        <item name="android:layout_marginBottom">@dimen/divider_bottom_margin</item>
    </style>
    <style name="divider_set" parent="divider">
        <item name="android:layout_marginBottom">@dimen/divider_set_margin</item>
    </style>

    <style name="scroll_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
